{
  "name": "react-redux-monorepo-starter-app",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Mariusz Kaczkowski",
  "private": true,
  "workspaces": [
    "lib-scripts",
    "lib-core",
    "lib-components",
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "cross-env PRODUCT_NAME=lib-sample scripts start:dev",
    "build": "cross-env PRODUCT_NAME=lib-sample scripts build:production",
    "test": "scripts test",
    "test:update": "scripts test:update",
    "serve": "serve -s -p 5000 build",
    "storybook": "start-storybook -c lib-components/.storybook -p 6006",
    "flow-typed": "flow-mono install-types --ignoreDeps=peer --overwrite",
    "typecheck": "tsc",
    "typecheck:watch": "yarn typecheck -- --watch"
  },
  "devDependencies": {
    "jest": "^23.4.0",
    "lerna": "^2.11.0"
  }
}
